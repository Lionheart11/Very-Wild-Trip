<div id="modal2" class="modal bottom-sheet">
  <div class="modal-content">
    <ul class="collection with-header">
      <li class="collection-header"><h4>Liste des Participants</h4></li>
        <% @participants.each do |participant| %>
      <li class="collection-item"><%= participant.name %></li>
    <% end %>
    </ul>
  </div>
</div>  

      
<!-- Modal Structure -->
<div id="modal1" class="modal modal-fixed-footer">
  <div class="modal-content">
    <%= form_for :participant, url: add_participant_path(@trip) do |f| %>
      <%= f.label :name, "Nom, prénom ou pseudo"%> 
      <%= f.text_field :name %><br />
      <%= f.submit "Ajouter un participant"%>
    <% end %>
  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Je suis un footer de merde</a>
  </div>
</div>


<div id="modal3" class="modal modal-fixed-footer">
    <div class="modal-content">
      <h1><%= @location.name.capitalize %></h1>

      <h2>" Il fait <%= @temperature %> °C "</h2>
    <div class="modal-footer">
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Agree</a>
    </div>
  </div>
</div>



<div class="fixed-action-btn" style="bottom: 45%; right: 24px;">
  <a class="btn-floating btn-large red">
    <i class="large material-icons">tag_faces</i>
  </a>
  <ul>
    <li><a class="modal-trigger btn-floating red"><i class="material-icons">tag_faces</i></a></li>



    <li><a class="modal-trigger btn-floating yellow darken-1" href="#modal3"><i class="material-icons">wb_sunny</i></a></li>



    <li><a class="modal-trigger btn-floating green" href="#modal2"><i class="material-icons">people</i></a></li>



    <li><a class="modal-trigger btn-floating blue" href="#modal1"><i class="material-icons">person_add</i></a></li>
  </ul>
</div>
       
