<div class="collection">
	<li class="collection-header"><h1>Liste des voyages organisés</h1></li>
		<% @trips.each do |trip| %>	
			<%= link_to trip_path(trip.id), class: "collection-item" do %>
				<b><%= trip.creator %></b> a créé le trip pour <b><%=trip.destination %></b> qui coutera <%= trip.budget %>€
			<% end %>
		<% end %>
</div>


    